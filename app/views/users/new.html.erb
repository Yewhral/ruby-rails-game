<div class="singular">
  <%= form_for(@user, url: register_path) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name, class: 'user-label' %>
    <%= f.text_field :name %>

    <%= f.label :email, class: 'user-label' %>
    <%= f.email_field :email %>

    <%= f.label :password, class: 'user-label' %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation", class: 'user-label' %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create my account" %>
  <% end %>
</div>
